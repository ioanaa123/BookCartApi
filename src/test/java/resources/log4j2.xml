<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn"> <!--acest fisier e necesar pentru configurari de log-uri -->
    <Appenders> <!--unde anume definim informatia pe care vrem sa o specificam  -->
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers> <!--aici activam loggerul cu numele de console de mai sus -->
        <Root level="info" additivity="false">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>